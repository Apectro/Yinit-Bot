{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "inlineSourceMap": true,
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}